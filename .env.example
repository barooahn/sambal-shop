# Google Analytics 4 Configuration
# Get this from Google Analytics 4 property settings
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Google Search Console Verification
# Get this from Google Search Console verification process
# This is the content attribute value from the meta tag
NEXT_PUBLIC_GSC_VERIFICATION_CODE=

# Supabase Configuration (if using)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Stripe Configuration
# Get these from your Stripe Dashboard
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Sales Configuration
# Set to "true" to enable sales, "false" to show coming soon
NEXT_PUBLIC_SALES_ENABLED=false

# Google Merchant Center Configuration
# Get this from your Google Merchant Center account ID
GOOGLE_MERCHANT_ID=
# Path to your Google Service Account JSON key file
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./google-service-account-key.json

# Other environment variables
NEXT_PUBLIC_SITE_URL=https://www.spiceislandindonesia.com
